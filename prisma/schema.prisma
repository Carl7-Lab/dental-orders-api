generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  DOCTOR
  ADMIN
}

enum OrderType {
  RADIOGRAPHY
  LABORATORY
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Models
model Doctor {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  address   String?
  role      Role     @default(DOCTOR)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@map("doctors")
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  phone     String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@map("patients")
}

model Order {
  id        Int         @id @default(autoincrement())
  orderType OrderType
  status    OrderStatus @default(PENDING)

  // Relaciones
  doctor    Doctor  @relation(fields: [doctorId], references: [id])
  doctorId  Int
  patient   Patient @relation(fields: [patientId], references: [id])
  patientId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([doctorId])
  @@index([patientId])
  @@index([status])
  @@index([orderType])
  @@map("orders")
}
